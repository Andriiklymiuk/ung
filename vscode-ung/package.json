    "viewsContainers": {
      "activitybar": [
        {
          "id": "ung",
          "title": "Ur Next Gig",
          "icon": "resources/activityBarIcon.png"
        }
      ]
    },
    "views": {
      "ung": [
        {
          "id": "ungOnboarding",
          "name": "Welcome",
          "type": "webview",
          "when": "!ung.cliInstalled || !ung.isInitialized"
        },
        {
          "id": "ungDashboard",
          "name": "Dashboard",
          "type": "webview",
          "when": "ung.cliInstalled && ung.isInitialized"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ung.recheckCli",
          "when": "view == ungOnboarding",
          "group": "navigation@1"
        },
        {
          "command": "ung.openDocs",
          "when": "view == ungOnboarding",
          "group": "navigation@2"
        },
        {
          "command": "ung.checkForUpdates",
          "when": "view == ungDashboard",
          "group": "navigation@1"
        },
        {
          "command": "ung.refreshDashboard",
          "when": "view == ungDashboard",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "UNG",
      "properties": {
        "ung.useGlobalConfig": {
          "type": "boolean",
          "default": true,
          "description": "Use global ~/.ung/ configuration. Set to false to use local .ung/ in workspace (will be created if needed)"
        },
        "ung.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh views after operations"
        },
        "ung.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show active time tracking in status bar"
        },
        "ung.roundHours": {
          "type": "boolean",
          "default": true,
          "description": "Round hours up to nearest integer (9.5 â†’ 10)"
        },
        "ung.roundRevenue": {
          "type": "boolean",
          "default": true,
          "description": "Round revenue projections up to nearest dollar"
        }
      }
    },
    "keybindings": [
      {
        "command": "ung.commandCenter",
        "key": "ctrl+shift+u",
        "mac": "cmd+shift+u",
        "when": "editorTextFocus || !editorFocus"
      },
      {
        "command": "ung.quickStart",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus || !editorFocus"
      },
      {
        "command": "ung.stopTracking",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s",
        "when": "editorTextFocus || !editorFocus"
      },
      {
        "command": "ung.createInvoice",
        "key": "ctrl+alt+i",
        "mac": "cmd+alt+i",
        "when": "!editorFocus"
      },
      {
        "command": "ung.generateFromTime",
        "key": "ctrl+alt+g",
        "mac": "cmd+alt+g",
        "when": "!editorFocus"
      },
      {
        "command": "ung.refreshDashboard",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r",
        "when": "!editorFocus"
      },
      {
        "command": "ung.search",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+f",
        "when": "editorTextFocus || !editorFocus"
      },
      {
        "command": "ung.openStatistics",
        "key": "ctrl+alt+d",
        "mac": "cmd+alt+d",
        "when": "editorTextFocus || !editorFocus"
      },
      {
        "command": "ung.quickActions",
        "key": "ctrl+alt+u",
        "mac": "cmd+alt+u",
        "when": "editorTextFocus || !editorFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "bun run compile",
    "test": "node ./out/test/runTest.js",
    "test:cov": "node ./out/test/runTest.js",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "format": "biome format --write ./src",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/glob": "8.1.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.0",
    "lefthook": "^2.0.4",
    "mocha": "^10.0.0",
    "typescript": "^5.0.0"
  }
}
