# UNG Configuration File Example
# Copy this to ~/.ung/config.yaml or .ung.yaml (project-specific)

# Database and storage paths
database_path: "~/.ung/ung.db"
invoices_dir: "~/.ung/invoices"

# Language code (en, uk, de, fr, es, etc.)
language: "en"

# Custom HTML templates for PDFs (optional)
# If not specified, uses built-in gofpdf templates
# templates:
#   invoice_html: "~/custom-templates/invoice.html"
#   contract_html: "~/custom-templates/contract.html"

# Invoice configuration
invoice:
  # Terms & Conditions text
  terms: "Please make the payment by the due date."

  # Payment note/instruction
  payment_note: "Payment is due within the specified term."

  # Labels (customize for your language)
  notes_label: "Notes"
  terms_label: "Terms & Conditions"
  invoice_label: "INVOICE"
  from_label: "From"
  bill_to_label: "Bill To"
  description_label: "Description"
  total_label: "Total"
  item_label: "Item"
  quantity_label: "Quantity"
  rate_label: "Rate"
  amount_label: "Amount"

