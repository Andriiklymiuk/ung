# UNG Configuration File Example
# Copy this to ~/.ung/config.yaml or .ung.yaml (project-specific)

# Database and storage paths
database_path: "~/.ung/ung.db"
invoices_dir: "~/.ung/invoices"

# Language code (en, uk, de, fr, es, etc.)
language: "en"

# Custom HTML templates for PDFs (optional)
# If not specified, uses built-in gofpdf templates
# templates:
#   invoice_html: "~/custom-templates/invoice.html"
#   contract_html: "~/custom-templates/contract.html"

# =============================================================================
# PDF Configuration - Enhanced Features
# =============================================================================
pdf:
  # Color theme (RGB values 0-255)
  # Default is Zoho-style orange theme
  primary_color:
    r: 232
    g: 119
    b: 34
  secondary_color:
    r: 80
    g: 80
    b: 80
  text_color:
    r: 60
    g: 60
    b: 60

  # Watermark settings
  # Shows PAID/OVERDUE watermark diagonally across the page
  show_watermark: true
  # watermark_text: "CONFIDENTIAL"  # Optional: override automatic status watermark

  # Layout options
  show_logo: true          # Display company logo (set logo_path in company settings)
  show_qr_code: false      # QR code for payment (requires additional setup)
  show_page_number: true   # Show "Page X of Y" on multi-page documents
  show_tax_breakdown: false # Show VAT/tax line in totals

  # Tax/VAT settings (when show_tax_breakdown is true)
  tax_rate: 0.0            # Tax rate as decimal (0.20 = 20%)
  tax_label: "VAT"         # Label for tax (VAT, GST, Tax, etc.)
  tax_inclusive: false     # Whether line item prices include tax

  # Labels (customize for your language or preference)
  subtotal_label: "Subtotal"
  discount_label: "Discount"
  tax_amount_label: "VAT"
  balance_due_label: "Balance Due"
  paid_label: "PAID"
  draft_label: "DRAFT"
  overdue_label: "OVERDUE"

